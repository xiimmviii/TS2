{% extends 'base.html.twig' %}

{% block content %}


<div class="col-md-6 col-sm-10 col-xs-10 mx-auto m-5 p-3" id="">
                {{form_start(form)}}
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.nom) }}
                         {{ form_row(form.societe) }}
                          {{ form_row(form.telephone) }}
                        {{ form_row(form.email) }}
                    </div>

                    <div class="col-6">
                        {{ form_row(form.objet) }}
                        {{ form_row(form.message) }}
                        <div class="form-group">
                            <button class="btn btn-info" type="submit" action="">Envoyer !</button>
                        </div>
                    </div>
                </div>


                {{form_end(form)}}
                </div>

{% endblock %}
